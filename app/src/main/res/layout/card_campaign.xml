<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    android:id="@+id/campaignCardView">

    <LinearLayout
        android:id="@+id/campaignLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/descriptionTextView"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample description"/>

        <TextView
            android:id="@+id/localTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample - location"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="Blood type required : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/bloodTypeTextView"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sample blood type"/>
        </LinearLayout>

        <TextView
            android:id="@+id/collaboratorTextView"
            android:text="I'm collaborator"
            android:textColor="@android:color/holo_green_dark"
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"/>


    </LinearLayout>

</android.support.v7.widget.CardView>